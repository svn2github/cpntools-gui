        theGuideClipping: ^GuidelineClipping;
        theGuideCommand: ^CreateGuideCommand;
     do &VerticalGuideline[] -> theGuideLine[];
        theGuideLine.init;
	  at.x - offsetX -> pos -> posI;
	  (if posI < 0 then
		  posI / gridSize - 0.5 -> posI;
	  else
