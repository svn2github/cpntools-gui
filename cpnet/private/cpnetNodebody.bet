      pos: ^Point2d;
   do getAnchors -> anchors[];
      (getInscriptions).scan
      (# 
      do (if current.snap_id <> 0 then
             current.snap_id -> anchors.get -> pos[];
             (pos.x, pos.y) -> current.position;
          else
             (x + current.dx, y + current.dy) -> current.position;
