-- NodepresentAnchors: doPart --
do (# anchors: ^PointList;
   do getAnchors -> anchors[];
      anchors.scan
        (# handle: ^Rect;
        do &Rect[] -> handle[];
           handle.init;
           current.x - presentation.x -> handle.x;
           current.y - presentation.y -> handle.y;
           4 -> handle.width;
           4 -> handle.height;
           green[] -> &FillStyle -> handle.theStyle[];
           handle[] -> presentation.add;
        #);
   #);

