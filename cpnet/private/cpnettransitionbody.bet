   #);
   removeError;
   scanInstances 
   (# 
   do current.removeError; 
      (if not THIS(Transition).isSubstitutionTransition then
          NONE -> current.thePortSocketDialog[]; (*Bug #1931*)
      if);
      (if current.thePortSocketDialog[]<>NONE then
